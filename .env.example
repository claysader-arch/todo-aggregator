# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Notion Configuration
NOTION_API_KEY=ntn_your-notion-key-here
NOTION_DATABASE_ID=your-database-id-here
# Optional: Notion AI Meeting Notes Database (Phase 6)
# To use this feature:
#   1. Enable Notion Calendar and connect it
#   2. Create a personal meeting summary database in Notion
#   3. In Notion Calendar settings > Matter Intelligence, set the default DB for AI notes
#   4. Share the database with your Notion integration
NOTION_MEETINGS_DATABASE_ID=your-meetings-database-id-here

# Slack Configuration (Phase 3)
# User OAuth Token from api.slack.com/apps (starts with xoxp-)
# Required scopes: channels:history, channels:read, groups:history, groups:read,
#                  im:history, im:read, mpim:history, mpim:read, users:read
SLACK_USER_TOKEN=xoxp-your-slack-token-here
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_CANVAS_ID=F123456789

# Zoom Configuration (Phase 2)
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret

# Gmail Configuration (Phase 4)
# Get these by running: python3 scripts/gmail_oauth_setup.py /path/to/credentials.json
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REFRESH_TOKEN=your-refresh-token
# Optional: Number of days to look back for emails (default: 1)
GMAIL_LOOKBACK_DAYS=1
# Optional: Custom Gmail search query (overrides default filtering)
# Examples: "label:action-required", "is:unread", "subject:(TODO OR ACTION)"
GMAIL_QUERY=

# Optional: Runtime Settings
DEBUG=false
LOG_LEVEL=INFO

# Filtering Settings
# Set your name(s) to filter todos assigned to you (comma-separated variations)
MY_NAME=Your Name,yourname,Your Full Name
# Only include todos assigned to you (set to false to include all todos)
FILTER_MY_TODOS_ONLY=true

# Phase 5: Intelligence Layer Settings
# Enable/disable AI-powered priority scoring (true/false)
ENABLE_PRIORITY_SCORING=true
# Enable/disable automatic category tagging (true/false)
ENABLE_CATEGORY_TAGGING=true
# Enable/disable relative date inference (true/false)
ENABLE_DUE_DATE_INFERENCE=true
# Comma-separated keywords that indicate high priority
HIGH_PRIORITY_KEYWORDS=urgent,asap,critical,today,p0,immediately,blocker

# Phase 6: Zoom Email Detection
# Comma-separated list of Zoom email senders for re-attribution
# Emails from these senders will be attributed as "zoom" source instead of "gmail"
ZOOM_EMAIL_SENDERS=meetings-noreply@zoom.us,no-reply@zoom.us,noreply@zoom.us
